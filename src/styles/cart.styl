@import 'variables.styl'

#cart
  padding-bottom 120px
  .card
    padding 0 36px
    border-radius 8px
    box-shadow 0 2px 2px rgba(gray, 0.1)
    background white
    margin-top 20px
  .card.step
    display flex
    height 64px
    margin-top 64px
    .step
      display flex
      align-items center
      margin-right 64px
      color gray-lighter
      .step-bullet
        width 24px
        height 24px
        border 1px solid gray-lighter
        border-radius 50%
        display flex
        margin-right 10px
        align-items center
        justify-content center
      &.finish
        .step-bullet
          color transparent
          background gray-lightest url('/static/imgs/file-upload-list-heading-finish-icon.svg') no-repeat center
      &.active
        color brand-primary
        .step-bullet
          border-color brand-primary
  .card.item
    .item-heading
      display flex
      height 60px
      // border-bottom 1px solid gray-lightest
      align-items center
    .item-body
      display flex
      align-items center
      margin 0 -36px
      padding 0 36px
      padding-top 24px
      padding-bottom 36px
      border-top 1px solid gray-lightest
      border-bottom 1px solid gray-lightest
      .item-info
        flex 2
        display flex
        .item-thumbnail
          width 80px
          height 80px
          border-radius 8px
          background-size cover
          background-position center
          flex-shrink 0
          margin-right 24px
        .column-right
          min-width 0
          h5
            font-size 16px
            overflow hidden
            text-overflow ellipsis
            margin 0
            margin-bottom 15px
            line-height 21px
            max-height 40px
          
      & > span
        flex 1
        text-align center
        font-size 16px
        color gray-dark
      .price
        color gray-dark
        font-size 16px
        font-weight bold
        margin-left 4px
      .badge-wrapper
        &:after
          content ''
          display block
          clear both
        a
          line-height 24px
          float right
        .badge-icon
          float left
          min-width 24px
          height 24px
          line-height 24px
          border-radius 12px
          position relative
          margin-right 10px
          font-size 12px
          .message
            padding-left 30px
            padding-right 12px
            color brand-primary
          &:after
            position absolute
            left 0 
            top 0 
            width 24px
            height 24px
            border-radius 12px
            display flex
            align-items center
            justify-content center
            color white
          &.copyright
            &:after
              background brand-info
              content '版'
          &.licence
            background #B7EDD7
            &:after
              background brand-primary
              content '授'
          &.derivative
            &:after
              background gray-lighter
              content '衍'
          &.copyright.disabled, &.licence.disabled, &.derivative.disabled
            &:after
              background gray-lighter
    .item-footer
      display flex
      align-items center
      height 64px
      a
        cursor pointer
        display flex
        align-items center
        color gray-light
        font-size 12px
        position relative
        top 2px
        margin-right 22px
        &:before 
          content ''
          display inline-block
          width 16px
          height 16px
          position relative
          top -2px
          margin-right 6px
        &.delete:before
          background url('/static/imgs/cart-delete-icon.svg') no-repeat center
        &.fav:before
          background url('/static/imgs/cart-add-fav-icon.svg') no-repeat center
      .sum-text
        margin-left auto
        margin-top 8px
        font-size 12px
        color gray-light
      .sum
        color brand-danger
        font-size 25px
        margin-left 4px
        font-weight bold
        &:before
          font-size 20px
          content '¥'
          font-weight 300
          margin-right 8px
    label
      flex 2
      min-width 0
      overflow hidden
      text-overflow ellipsis
      input
        margin-right 12px
    span
      font-size 12px
      color gray-light
      flex 1
      text-align center
  .card.billing
    height 100px
    display flex
    align-items center
    label.select-all
      flex 1
      input
        margin-right 12px
    .total-text
      font-size 12px
      color gray-light
      margin-top 10px
      margin-right 12px
    .total
      font-size 30px
      color brand-danger
      font-weight bold
      &:before
        content '¥'
        font-size 28px
        font-weight 300
        margin-right 8px
    button.submit
      width 138px
      margin-left 20px