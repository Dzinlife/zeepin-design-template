@import 'variables.styl'

#copyright-sale
  padding-bottom 160px
  .width-limit
    max-width 1366px
    min-width 1136px
  .breadcrumb
    margin-top 24px
    background transparent
    .active
      color gray-lighter
      max-width 200px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
  .layout-wrapper
    display flex
    > .column-left
      flex 2
      min-width 0
      margin-right 30px
    > .column-right
      flex 1
      max-width 400px
  
  .panel.head
    display flex
    padding 30px
    margin-bottom 30px
    img.thumb
      width 208px
      margin-bottom auto
      border-radius 8px
      margin-right 30px
    .column-right
      flex 1
      min-width 0
      h1
        font-size 24px
        max-height 66px
        line-height 30px
        overflow hidden
        text-overflow ellipsis
        margin-bottom 15px
      .industry-category
        margin-bottom 32px
        font-size 12px
        font-weight bold
        span
          font-weight normal
          color gray-light
          margin-left 8px
      .ghost-panel
        display flex
        // justify-content space-between
        .owner-information
          display flex
          align-items center
          // width 200px
          flex 1
          min-width 0
          .avatar
            width 50px
            height 50px
            flex-shrink 0
            border-radius 50%
            background-size cover
            background-position center
            margin-right 20px
          .line-wrapper
            display flex
            align-items center
          .column-right
            min-width 0
        h4
          font-size 16px
          margin 0
          font-weight normal
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
        .auth-badge
          flex-shrink 0
          margin-left 2px
          display inline-block
          background url('/static/imgs/auth-icon.svg') no-repeat
          height 16px
          width 16px
          
        h5
          font-weight normal
          font-size 12px
          color gray-light
          margin 0
          margin-top 8px
          span
            color brand-primary
            font-weight bold
            margin-left 6px
        .blockchain-information
          flex 1
          display flex
          align-items center
          margin-left 20px
          .icon
            width 24px
            height 24px
            background url('/static/imgs/purchased-licence-calendar-icon.svg') no-repeat
            margin-right 20px
          .column-right
            flex 1
  .panel.body
    .panel-heading
      border-bottom 1px solid gray-lightest
      padding 0 50px
      padding-bottom 0
      padding-top 10px
      position relative
      .nav.nav-tabs
        border none
      .appeal-wrapper
        position absolute
        right 24px
        bottom 11px
        display flex
        align-items center
        span
          display inline-block
          height 21px
          width 20px
          margin-right 10px
          background url('/static/imgs/appeal-icon.svg') no-repeat center
        a
          white-space nowrap
          color gray-light
    .panel-body
      padding 20px 50px
      #tab0
        .article
          color gray-light
          img
            width 100%
            margin 10px 0
          p
            margin 20px 0
        .non-artcle
          h3
            margin-top 42px
            margin-bottom 16px
            font-size 16px
          .well-blockchain, .well-certficate
            width 472px
            padding 12px 42px
            padding-left 60px
            border-radius 22px
            padding-left 60px
            whtie-space nowrap
            overflow hidden
            text-overflow ellipsis
          .well-blockchain
            background #E6F6ED url('/static/imgs/purchased-licence-blockchain-icon.svg') no-repeat 19px
            color brand-primary
          .well-certficate
            background #EAF3FF url('/static/imgs/purchased-licence-certificate-icon.svg') no-repeat 20px
            color brand-info
          .files-information
            margin-top 90px
            margin-bottom 80px
            .files-include
              display flex
              align-items center
              color gray-light
              .extension
                color gray-lighter
                margin-right 12px
              .number
                color brand-primary
                margin 0 4px
            .attachment-icon
              width 16px
              height 17px
              background url('/static/imgs/purchased-licence-attachment-icon.svg') no-repeat
              margin-left 32px
              margin-right 8px
            .table
              margin-top 24px
              width auto
              td, th
                text-align center
                padding-left 32px
                padding-right 32px
                max-width 136px
                overflow hidden
                text-overflow ellipsis
      #tab1
        padding 12px 0
        table.browsing-history
          td
            height 40px
            vertical-align center
            padding 10px
            color gray-light
            &.time
              padding-left 28px
              background url("/static/imgs/time-icon.svg") no-repeat center left
            &.content
              padding-left 36px
              span
                color brand-primary
                margin-right 10px
      #tab2
        padding-top 12px
        padding-bottom 36px
        .transcation-card
          border 1px solid
          margin-top 20px
          .column-right
            min-width 0
          .data
            flex 1 
            overflow hidden
            text-overflow ellipsis
            padding 0 28px
            white-space nowrap
          .card-heading 
            height 40px
            border-bottom 1px solid
            display flex
            align-items center
          .card-sub-heading 
            height 40px
            border-bottom 1px solid
            display flex
            align-items center
            justify-content space-between
          .card-body
            display flex
            align-items center
            height 108px
            .icon
              width 32px
              height 32px
              background url('/static/imgs/transcation-icon.svg') no-repeat center
            .hash
              flex 1
              min-width 0
              overflow hidden
              white-space nowrap
              text-overflow ellipsis
              padding 28px
          .data-wrapper
            display flex
            flex 1
            &.status
              flex none
              .data
                background url('/static/imgs/tick-circle-icon.svg') no-repeat center left
                padding-left 24px
                text-align right
          .card-label
            white-space nowrap
            display inline-block
            width 80px
            padding 0 28px
            font-weight bold
          &:nth-child(odd)
            border-color brand-primary
            color brand-primary
            *
              border-color brand-primary
            .card-heading
              background #E6F6ED
          &:nth-child(even)
            border-color #9EC1E2
            color #4A90E2
            *
              border-color #9EC1E2
            .card-heading
              background #F2F7FF
            .card-body .icon
              background url('/static/imgs/transcation-icon-blue.svg') no-repeat center center
            .data-wrapper.status .data
              background url('/static/imgs/tick-circle-icon-blue.svg') no-repeat center left
      #tab3
        padding-bottom 48px
        .ask-question
          h3
            font-size 16px
            font-weight normal
          .hint
            color gray-light
          textarea
            display block
            min-height 100px
            width 100%
            margin-top 24px
          button.submit
            float right
            margin-top 12px
            
        ul.faq-list
          &:before
            content ''
            display block
            clear both
          list-style-type none
          padding 0
          margin 0
          margin-top 120px
          li
            border 1px solid gray-lightest
            box-shadow 0 2px 4px rgba(gray, 0.2)
            position relative
            min-height 48px
            margin-top 18px
            padding-left 34px
            padding-right 48px
            // .question
            //   padding-right 8px
            .fold-icon
              width 48px
              height 48px
              background url('/static/imgs/carpet-icon.svg') no-repeat center
              position absolute
              right 0
              top 0
              cursor pointer
              transition 0.2s
              &.open
                transform rotate(90deg)
                & ~ .question
                  padding-top 14px
              &:not(.open)
                & ~ *:not(.question)
                  display none
                & ~ .question
                  height 48px
                  overflow hidden
                  white-space nowrap
                  text-overflow ellipsis
                  line-height 48px
            textarea
              display block
              width 100%
              min-height 100px
              margin-top 20px
            button.submit
              float right
              margin-top 16px
              margin-bottom 16px
              width 100px
              letter-spacing 4px
            .answer
              color gray-light
              margin-top 30px
              margin-bottom 24px
            &.no-reply
              .fold-icon
                user-select none
                background none
                transform none
                &:after
                  color brand-info
                  content '回复'
                  line-height 48px
                  display block
                  width 100%
                  text-align right
                  padding-right 13px
                &:hover:after
                  text-decoration underline
                &.open:after
                  content '收起'
                  
            &:after
              content ''
              display block
              clear both
                
                 
      .line
        margin 50px -50px
        border-bottom 1px solid gray-lightest
  .panel.customer
    .panel-heading
      padding 0 44px
      padding-top 12px
      padding-bottom 12px
      display flex
      align-items center
      .block-wrapper + .block-wrapper
        margin-left 44px
      h3
        font-size 17px
        margin-top 14px
    .panel-body
      padding 0 44px
      padding-bottom 32px
      .range-descrtption 
        color gray-light
        font-weight normal
        a
          float right
          cursor pointer
            
      .price-wrapper
        margin-top 36px
        font-size 17px
        .price
          font-size 34px
          margin-left 24px
          &:before
            content '¥'
            font-size 21px
            margin-right 4px
    .panel-footer
      background brand-primary
      border none
      height 138px
      display flex
      align-items center
      padding 0 54px
      button.add-cart
        border none
        border-radius 23px
        height 46px
        width 46px
        margin-right 10px
        background white url('/static/imgs/add-cart.svg') no-repeat center
        &:hover
          opacity 0.9
        &:active
          opacity 0.8
      button.buy
        background white
        height 46px
        border none
        border-radius 23px
        padding 0 40px
        font-weight bold
        font-size 20px
        flex 1
        &:hover
          opacity 0.9
        &:active
          opacity 0.8
    h5
      margin 0
      margin-top 24px
      margin-bottom 10px
      font-size 12px
      font-weight 300
      span
        color gray-lighter
    .plan-select
      .plan-select-button
        height 28px
        display flex
        align-items center
        justify-content center
        padding 0 10px
        border 1px solid gray-lighter
        color gray-light
        cursor pointer
        border-radius 14px
        margin-right 6px
        transition 0.2s
      input
        width 0.1px
        height 0.1px
        opacity 0
        overflow hidden
        position absolute
        z-index -1
        font-size 14px
        font-weight normal
        &:checked + .plan-select-button
          background brand-primary
          border-color brand-primary
          color white
        &:disabled + .plan-select-button
          border-color gray-lightest
          background gray-lightest
          color gray-light
          cursor not-allowed
  .button-line-wrapper
    display flex
    button
      border none
      box-shadow 0 2px 7px rgba(gray, 0.2)
      flex 1
      border-radius 8px
      height 64px
      background white
      font-size 16px
      letter-spacing 2px
      color gray
      padding-left 35px
      & + button
        margin-left 16px
      &.fav
        background white url('/static/imgs/fav-icon.svg') no-repeat 35% center
      &.share
        background white url('/static/imgs/share-icon.svg') no-repeat 24% center
      &:hover
        background-color rgba(gray-lightest, 0.1)
      &:active
        background-color rgba(gray-lightest, 0.3)
  #share-modal, #appeal-modal
    .modal-dialog
      width 360px
      position relative
    .modal-body
      padding 24px 36px
      &:after
        content ""
        display block
        clear both
    .modal-footer
      text-align center
      border none
      padding-top 20px
      padding-bottom 40px
      button
        width 138px
    input
      width 240px
    h3
      font-size 17px
      letter-spacing 2px
      text-align center
      margin-top 28px
    h5
      font-size 12px
      color gray-light
      margin-top 32px
    button.close
      position absolute
      right 16px
      top 16px
      width 32px
      height 32px
      border-radius 50%
      border 1px solid gray-lighter
      opacity 1
      background url("/static/imgs/close-cross.svg") no-repeat center
      &:hover
        background-color gray-lightest
    .description
      color gray-light
      font-size 12px
    label#upload-appeal-description
      height 32px
      border-radius 16px
      width 114px
      line-height 30px
      text-align center
      border 1px solid brand-primary
      font-size 12px
      color gray-light
      padding 0 12px
      cursor pointer
      font-weight normal
      overflow hidden
      text-overflow ellipsis
      margin-top 24px
      &:hover
        background gray-lightest
      input
        width 0.1px
        height 0.1px
        opacity 0
        overflow hidden
        position absolute
        z-index -1
    button.submit-appeal
      display block
      margin 24px auto
      width 114px
    .rules
      font-size 12px
      color gray-light
      margin-top 44px
    
  #share-success.toast
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    z-index 2050
    display none
    overflow hidden
    -webkit-overflow-scrolling touch
    outline 0
    .toast-dialog
      width 300px
      border-radius 8px
      height 200px
      box-shadow 0 3px 18px rgba(gray, 0.5)
      position absolute
      left 0 
      top 0 
      right 0 
      bottom 0 
      margin auto
      background white url('/static/imgs/toast-tick.svg') no-repeat 50% 40%
      h3
        font-weight 300
        font-size 18px
        letter-spacing 2px
        text-align center
        color gray
        padding-top 120px
  #licence-modal
    @import 'licence-template.styl'
    .modal-dialog
      width 640px
    .modal-heading
      border-bottom 1px solid gray-lightest
    button.quit
      width 138px
      display block
      letter-spacing 3px
      margin 0 auto
    button.close
      position absolute
      right 16px
      top 17px
      width 32px
      height 32px
      border-radius 50%
      border 1px solid gray-lighter
      opacity 1
      background url("/static/imgs/close-cross.svg") no-repeat center
      &:hover
        background-color gray-lightest
