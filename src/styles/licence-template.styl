@import 'variables.styl'

#licence-template
 .width-limit
   width 770px
   padding-top 64px
  .panel-heading
    height 68px
    display flex
    align-items center
    padding 0 70px
    h1
      font-size 22px
      font-weight normal
      color gray-dark
      margin 0
  .panel-body
    padding 44px 70px
    .custom-licence-wrapper
      max-width 640px
      margin 0 auto
    .form-group
      display flex
    .column-wrapper
      flex 1
      padding-top 12px
      label
        margin 0
        margin-right 20px
        height 44px
        color gray
    label.control-label
        line-height 44px
        width 120px
        color gray
        font-size 14px
    a.quit
      color gray
      font-size 16px
      cursor pointer
      display block
      text-align center
      margin-top 44px
      margin-bottom 24px
  .footer-text
    color gray-light
    margin-top 44px
    padding-left 16px