@import 'variables.styl'

#balance-payment
  padding-bottom 120px
  .card
    padding 0 36px
    border-radius 8px
    box-shadow 0 2px 2px rgba(gray, 0.1)
    background white
    margin-top 120px
  .card.billing
    .card-heading
      height 128px
      display flex
      align-items center
      label.apply-delivery-certificate
        font-size 17px
        letter-spacing 2px
        input
          margin-right 12px
        .question-tooltip
          margin-left 4px
          position relative
          top -2px
      .description
        color gray-light
        padding-left 26px
    .card-body
      margin 0 -36px
      padding 0 36px
      border-top 1px solid transparent
      border-bottom 1px solid gray-lightest
      padding-bottom 72px
      h3
        font-size 17px
        letter-spacing 2px
        margin-top 34px
        margin-bottom 8px
        font-size 19px
        display flex
        align-items center
        &:before
          content ''
          display inline-block
          height 24px
          width @height
          margin-right 12px
          background url('/static/imgs/check-success-icon.svg')
      .text
        font-size 14px
        color gray-light
        margin-left 36px

      .payment-method-wrapper
        display flex
        margin 0 -17px
        margin-top 50px
        justify-content center
        .payment-success-wrapper
          margin-right 50px
        .panel
          cursor pointer
          border 1px solid gray-lightest
          transition 0.2s
          position relative
          margin 0 17px
          &:before
            opacity 0
            transition 0.2s
            content ""
            position absolute
            display block
            background url("/static/imgs/copyright-info-sold-type-selected-icon.svg") no-repeat
            width 44px
            height 44px
            left 0
            top 0
          &:hover
            border-color gray-lighter
            box-shadow 0 11px 11px rgba(gray, 0.3)
          .panel-body
            height 116px
            display flex
            align-items center
            justify-content center
            .icon
              width 30px
              height 30px
              margin-right 15px
              &.balance
                background url('/static/imgs/payment-method-balance-icon.svg') no-repeat center
              &.alipay
                background url('/static/imgs/payment-method-alipay-icon.svg') no-repeat center
            h5 
              font-size 16px 
              margin 0
              margin-bottom 6px
              span font-size 14px
                color gray
            .description
              font-size 12px
              color gray-light
              font-weight normal
              
        input[type=radio]
          width 0.1px
          height 0.1px
          opacity 0
          overflow hidden
          position absolute
          z-index -1
        label.payment-method
          // flex 1
          width 272px
          input[type=radio]:checked
            & + .panel
              border-color #469BFF
              input
                pointer-events none
              &:before
                opacity 1

    .card-footer
      height 100px
      display flex
      align-items center
      label.select-all
        flex 1
        input
          margin-right 12px
      .total-text
        font-size 19px
        font-weight bold
        color gray-dark
        margin-left auto
        margin-top 4px
        margin-right 12px
      .total
        font-size 30px
        color brand-danger
        font-weight bold
        &:before
          content 'Â¥'
          font-size 28px
          font-weight 300
          margin-right 8px
      button.submit
        width 138px
        margin-left 44px
  #payment-password-modal
    .modal-dialog
      width 436px
    h3
      font-size 19px
      text-align center
      margin-top 50px
    a.go-to-setting
      font-size 14px
      font-weight bold
      color #469BFF
      margin 0 auto
      display block
      text-align center
    button.close
      position absolute
      right 16px
      top 16px
      width 32px
      height 32px
      border-radius 50%
      border 1px solid gray-lighter
      opacity 1
      background url("/static/imgs/close-cross.svg") no-repeat center
      &:hover
        background-color gray-lightest
    button.ok
      width 138px
      margin 0 auto
      display block
      margin-top 50px
      margin-bottom 24px
    .input-wrapper
      margin 0 auto
      width 280px
      margin-top 38px
      input
        display block
        width 100%
        margin-top 10px
    .input-label
      font-weight bold
      font-size 14px
      color gray-light