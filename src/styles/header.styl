@import 'variables.styl'

nav.navbar.navbar-default
  background transparent
  font-size 16px
  .navbar-brand
    width 220px
    display flex
    justify-content center
  .container-fluid
    display flex
    .tabs
      display flex
      justify-content center
      flex 1
      li
        margin-left 22px
        margin-right 22px
        a
          padding-left 6px
          padding-right 6px
        &.active
          position relative
          &:after
            content ""
            position absolute
            height 3px
            width 100%
            bottom 26px
            background brand-primary
      li.market
        a
          display flex
          align-items center
          img
            margin-right 10px
  .navbar-text.navbar-right.login-register
    width 172px
    margin-right 8px
    .navbar-link
      margin-left 28px
      text-decoration none
  .nav.navbar-nav.account
    margin-right 8px
    display flex
    align-items center
    white-space nowrap    
    img.navbar-cart-icon
      margin-right 10px
    &>li
      display flex
      align-items center
      margin-right 10px   
      &>a
        padding 0
        display flex
        align-items center
      &.cart
        margin-right 40px
      &.dropdown
        height 44px
        li a
          font-size 14px
          padding-top 12px
          padding-bottom 12px
          padding-left 16px
          display flex
          align-items center
          font-size 14px
          color gray-dark
          font-weight lighter
          letter-spacing 1px
          .icon
            display inline-block
            width 24px
            height 24px
            margin-right 8px
            &.account
              background url('/static/imgs/header-icon-account.svg') no-repeat center
            &.transaction
              background url('/static/imgs/header-icon-transaction.svg') no-repeat center
            &.fav
              background url('/static/imgs/header-icon-fav.svg') no-repeat center
            &.balance
              background url('/static/imgs/header-icon-balance.svg') no-repeat center
            &.logout
              background url('/static/imgs/header-icon-logout.svg') no-repeat center
    .dropdown-menu
      border none
      border-radius 0
      width 220px
      left auto
      right 0
    .dropdown-heading
      display flex
      align-items center
      padding-left 22px
      padding-right 16px
      .column-left 
        min-width 0
        flex 1
      .username, .email
        overflow hidden
        text-overflow ellipsis
      .username
        font-size 16px
      .email
        color gray-light
        font-weight normal
        margin-top 2px
        font-size 11px
    li.divider.footer
      margin-bottom 0
          
    .navbar-avatar
      margin-right 10px
      flex-shrink 0
      display inline-block
      width 24px
      height 24px
      border-radius 50%
      background-color gray-lightest
    .dropdown-heading
      height 72px
      margin-bottom -10px
      // border-bottom 1px solid gray-lightest
    .auth-badge
      margin-left 10px
      display inline-block
      background brand-primary url('/static/imgs/purchased-licence-auth-icon.svg') no-repeat 5px
      border-radius 5px
      padding 1px 6px
      padding-left 16px
      color white
      font-size 10px
      height 16px
      
    .navbar-avatar-name
      max-width 100px      
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

            
nav.navbar.search-block
  input
    flex 1
    margin-left 80px
    margin-right 180px
    margin-top 20px
    margin-bottom 20px
    border none
    border-bottom 1px solid gray-lightest
    padding-left 44px
    outline none
    background url("/static/imgs/header-search-icon.svg") no-repeat
    background-position left center
    font-size 24px
    color gray-dark
    &:focus
      border-color brand-primary
    