@import 'variables.styl'

nav.navbar.navbar-default
  background white
  box-shadow 0 2px 4px rgba(gray, 0.2)
  font-size 16px
  height 70px
  min-height auto
  .navbar-brand
    width 220px
    display flex
    justify-content center
    align-items center
    padding 0
    height 70px
  .container-fluid
    display flex
    .tabs
      display flex
      justify-content center
      flex 1
      li
        margin-left 22px
        margin-right 22px
        a
          padding 24px 6px
          display flex
          align-items center
          font-size 14px
          color gray-dark
          .icon
            height 18px
            width 18px
            display inline-block
            margin-right 8px
            &.staging-area
              background url('/static/imgs/header-icon-staging-area.svg') no-repeat center
            &.copyright-protect
              background url('/static/imgs/header-icon-copyright-protect.svg') no-repeat center
            &.copyright-market
              background url('/static/imgs/header-icon-copyright-market.svg') no-repeat center
        &.active
          position relative
          &:after
            content ""
            position absolute
            height 3px
            width 100%
            bottom 1px
            background brand-primary
      li.market
        a
          display flex
          align-items center
          img
            margin-right 10px
  .navbar-text.navbar-right.login-register
    width 172px
    margin-right 8px
    margin-top 24px
    margin-bottom 24px
    .navbar-link
      margin-left 28px
      text-decoration none
      font-size 14px
  .nav.navbar-nav.account
    margin-right 8px
    display flex
    align-items center
    white-space nowrap    
    .icon
      margin-right 10px
      display inline-block
      height 18px
      width 18px
      &.cart
        background url('/static/imgs/header-icon-cart.svg') no-repeat center
      &.notification
        background url('/static/imgs/header-icon-notification.svg') no-repeat center
        &.highlight
          background url('/static/imgs/header-icon-notification-hightlight.svg') no-repeat center
    &>li
      display flex
      align-items center
      margin-right 10px   
      &>a
        padding 0
        display flex
        align-items center
        font-size 14px
        color gray-dark
        font-weight normal
      &.notification
        margin-right 0
      &.cart
        margin-right 24px
        span
          font-size 12px
          margin-left 4px
          font-weight normal
          color brand-primary
      &.divider
        height 20px
        border-left 1px solid gray-lightest
        margin 0 16px
      &.dropdown
        height 44px
        li a
          font-size 14px
          padding-top 12px
          padding-bottom 12px
          padding-left 16px
          display flex
          align-items center
          font-size 14px
          color gray-dark
          font-weight lighter
          letter-spacing 1px
          .icon
            display inline-block
            width 24px
            height 24px
            margin-right 8px
            &.account
              background url('/static/imgs/header-icon-account.svg') no-repeat center
            &.transaction
              background url('/static/imgs/header-icon-transaction.svg') no-repeat center
            &.fav
              background url('/static/imgs/header-icon-fav.svg') no-repeat center
            &.balance
              background url('/static/imgs/header-icon-balance.svg') no-repeat center
            &.logout
              background url('/static/imgs/header-icon-logout.svg') no-repeat center
    .dropdown-menu
      border none
      border-radius 0
      width 220px
      left auto
      right 0
    .dropdown-heading
      display flex
      align-items center
      padding-left 22px
      padding-right 16px
      .column-left 
        margin-right 8px
        min-width 0
        flex 1
      .username, .email
        overflow hidden
        text-overflow ellipsis
      .username
        font-size 16px
      .email
        color gray-light
        font-weight normal
        margin-top 2px
        font-size 11px
    li.divider.footer
      margin-bottom 0
          
    .navbar-avatar
      margin-right 10px
      flex-shrink 0
      display inline-block
      width 40px
      height 40px
      border-radius 50%
      background-color gray-lightest
      background-size cover
      background-position center
    .dropdown-heading
      height 72px
      margin-bottom -10px
      // border-bottom 1px solid gray-lightest
    .auth-badge
      flex-shrink 0
      margin-left 2px
      display inline-block
      background url('/static/imgs/auth-icon.svg') no-repeat
      height 16px
      width 16px
      
    .navbar-avatar-name
      max-width 100px      
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

            
nav.navbar.search-block
  input
    border-radius 0
    flex 1
    margin-left 80px
    margin-right 180px
    margin-top 14px
    margin-bottom 20px
    border none
    border-bottom 1px solid gray-lightest
    padding-left 44px
    outline none
    background url("/static/imgs/header-search-icon.svg") no-repeat
    background-position left center
    font-size 24px
    color gray-dark
    &:focus
      border-color brand-primary
    