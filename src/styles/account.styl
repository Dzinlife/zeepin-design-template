@import 'variables.styl'

#account
  .width-limit 
    width 810px
  padding-bottom 140px
  .panel.top
    margin-top 70px
    .panel-body
      display flex
      padding 40px 44px
      position relative
      .avatar
        border-radius 50%
        width 100px
        height 100px
        background-size cover
        background-position center
        margin-right 28px
      .column-right
        min-width 0
        flex 1
        .name
          font-size 24px
        .last-login
          margin-top 5px
          color gray-light
          font-size 12px
        .auth-wrapper
          margin-top 12px
          .auth
            float left
            background url('/static/imgs/auth-icon.svg') no-repeat center left
            padding-left 22px
            margin-right 20px
            font-size 12px
            height 16px
            line-height 18px
      .reset-password
        position absolute
        font-size 12px
        padding 4px 20px
        background gray-dark
        color white
        border-radius 8px
        top 23px
        right 26px
  .panel.main
    .panel-heading
      border none
      .nav
        margin 0 -15px
        padding 0 15px
        padding-left 48px
    .panel-body
      padding 0 120px
      padding-top 48px
      padding-bottom 56px
      
      .form-group
        display flex
      .column-wrapper
        flex 1
        min-width 0
        input:not([type=checkbox])
          width 100%
        select 
          width 100%
      label.control-label
        line-height 44px
        width 120px
        font-weight normal
        color gray-light
      .select-group
        margin-bottom 12px
        display flex
        margin 0 -6px
        select 
          margin 0 6px
      .divider
        border-bottom 1px solid gray-lightest
        margin 0 -120px
        margin-top 48px
        margin-bottom 24px
      table.account-info
        td
          vertical-align top
          line-height 56px
        td:first-child
          width 120px
          color gray-light
        td:last-child
          width 400px
          color gray-dark
          a
            float right
            font-size 12px
            cursor pointer
          .hint
            font-size 12px
            color gray-light
            margin-top -36px
          button
            font-size 12px
            padding-top 4px
            padding-bottom 4px
            border-radius 16px
      button.submit
        width 138px
        display block
        margin 0 auto
        margin-top 100px
          
    