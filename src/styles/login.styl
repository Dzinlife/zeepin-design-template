@import 'variables.styl'

#login

  h2 
    font-size 24px
    color brand-primary
    text-align center
    padding-top 50px
    margin 0
    letter-spacing 4px
    
  .panel.panel-default.login, .panel.panel-default.register
    width 560px
    margin 0 auto
    margin-top 60px
    margin-bottom 160px
    
    .panel-heading
      padding 0
      border none
      
    .panel-body
      width 330px
      margin 0 auto
      padding 50px 0
      .input-wrapper
        position relative
        input, button
          display block
          width 100%
      input
        padding 0 16px
        padding-left 48px
        height 44px 
        border 1px solid gray-lightest
        border-radius 8px
        outline none
        margin-bottom 16px
        &:focus
          border-color gray-lighter
        &::placeholder
          color gray-lighter
        &.mobile
          background url("/static/imgs/login-phone-icon.svg") no-repeat
          background-position 18px center
        &.password
          background url("/static/imgs/login-key-icon.svg") no-repeat
          background-position 16px center
          
          
      a.forget-password
        position absolute
        top 100%
        right 0
        font-size 12px
        color gray-light
        padding-top 10px
      
      .input-wrapper.sms-code
        display flex
        margin-bottom 16px
        input, button
          display inline-block
          width auto
          margin 0
        button
          padding-left 0
          padding-right 0
          flex 1
          margin-left 12px
        input
          background url("/static/imgs/register-icon.svg") no-repeat
          background-position 18px center
      
      .checkbox-wrapper
        margin-top 40px
        font-size 14px
        display flex
        align-items center
        label
          font-weight normal
          color gray
        input
          margin 0
          margin-right 6px
          margin-bottom 10px
          padding 0
          height auto

      .login-button
        margin-top 40px
        letter-spacing 6px
        
      .guide-to-register
        display block
        font-size 12px
        color gray-light
        text-align center
        margin-top 116px
        margin-bottom 50px
      form
        margin-bottom 80px
