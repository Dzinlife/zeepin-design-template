block scripts
  script.
    function shareSuccess(){
      $('#share-modal').modal('hide')

      setTimeout(function(){
        showToast( $('#share-success') )
      }, 300)
    }

    function showToast($toast){
      $toast.show()
      setTimeout(function (){
        $toast.addClass('in')
        setTimeout(function (){
          $toast.removeClass('in')
          setTimeout(function (){
            $toast.hide()
          }, 300)
        }, 2000)
      })
    }

    function uploadDescriptionFileSelected(){
      if (this.files && this.files[0]) {
        document.getElementById('upload-appeal-description').childNodes[0].nodeValue = this.files[0].name
      }
    }
